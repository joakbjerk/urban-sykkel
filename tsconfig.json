{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsxdev",
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "paths": {
      "@components": ["js/ui/components/index.ts"],
      "@pages": ["js/ui/pages/index.ts"],
      "@landmarks": ["js/ui/landmarks/index.ts"],
      "@interfaces": ["js/interfaces/index.ts"],
      "@constants": ["js/constants/index.ts"],
      "@context": ["js/context/index.ts"],
      "@hooks": ["js/hooks/index.ts"],
      "@reducers": ["js/reducers/index.ts"],
      "@utils": ["js/utils/index.ts"],
      "@data": ["js/data/index.ts"],
      "@routing": ["js/routing/index.ts"],
      "@scss/*": ["scss/*"],
      "@scss-variables": ["scss/variables/variables.scss"],
      "@images/*": ["assets/images/*"],
      "@fonts/*": ["assets/fonts/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["./src/**/*", "./modules/**/*"]
}
